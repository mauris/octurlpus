<?xml version="1.0"?>

<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         colors="true"
         stopOnError="false"
         bootstrap="test/bootstrap.php"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         strict="true"
         verbose="false">
  <filter>
    <whitelist>
      <directory suffix=".php">src/</directory>
    </whitelist>
  </filter>
  <testsuites>
    <testsuite name="Octurlpus Test Suite">
      <directory phpVersion="5.3.0" phpVersionOperator=">=" suffix="Test.php">test/</directory>
    </testsuite>
  </testsuites>
</phpunit>